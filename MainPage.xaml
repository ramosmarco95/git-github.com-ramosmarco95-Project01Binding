<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project01Binding.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            
            <Label
                x:Name="lblBinary"
                Text="0"
                Style="{StaticResource LblBinary}"/>

            <Label
                x:Name="lblDecimal"
                Text="0"
                Style="{StaticResource LblDecimal}"/>

            <HorizontalStackLayout
                Padding="5,0"
                Spacing="20"
                HorizontalOptions="Center">
                
                <Button
                x:Name="BtnZero"
                Text="0"
                Clicked="OnZeroClicked"/>

                <Button
                x:Name="BtnOne"
                Text="1"
                Clicked="OnOneClicked"/>

                <Button 
                x:Name="BtnClear"
                Text="C"
                Clicked="OnClearClicked"/>

                <Button 
                x:Name="BtnClearEntry"
                Text="CE"
                Clicked="OnClearEntryClicked"/>

            </HorizontalStackLayout>

            <ProgressBar
                x:Name="progressBarRed"
                Progress="0.0"
                ProgressColor="Red" />
            
            <Button
                x:Name="btnCounter"
                Text="Click me!"
                SemanticProperties.Hint="Button for progress bar"
                Clicked="OnProgressBarClicked"
                HorizontalOptions="Fill" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
